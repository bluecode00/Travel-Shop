@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    @await Html.PartialAsync("_Product", product)
                    @*<partial name="_Product" model="product" />*@
                </div>
            }
        </div>
    </div>
</div>